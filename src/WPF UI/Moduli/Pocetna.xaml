<Page x:Class="WPF_UI.Moduli.Pocetna"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Moduli"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="Pocetna">
    <Grid Margin="160 -80 -320 85" Panel.ZIndex="-1">

        <Grid.RenderTransform>
            <RotateTransform Angle="50"/>
        </Grid.RenderTransform>
        
        <StackPanel Orientation="Horizontal">

            <StackPanel>
                <Border Width="700" Height="35" Background="#3dddc2" Margin="150 0 0 0" CornerRadius="20"/>
                <Border Width="700" Height="35" Background="#fc6586" Margin="150 0 0 0" CornerRadius="20"/>
                <Border Width="700" Height="35" Background="#383660" Margin="150 0 0 0" CornerRadius="20"/>
                <Border Width="700" Height="35" Background="Crimson" Margin="150 0 0 0" CornerRadius="20"/>
            </StackPanel>

            
        </StackPanel>
    </Grid>
</Page>
